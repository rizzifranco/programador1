        {{!--fila 2--}}
<div class="row">
    <div class="col-7" style="margin-top:-9px;">
        <h2>Listado de novedades</h2>
    </div>
    <div class="col-5 text-end">
        <a href="" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo
        </a>
    </div>
</div>

        {{!--fin fila 2--}}
<div class="row" style="padding-top: 30px;">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">titulo</th>
                    <th scope="col" class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td class="text-end">
                        <a href=" " class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                    </td>
                    {{/each}}
                </tr>
            </tbody>
        </table>
    </div>
</div>
</div>